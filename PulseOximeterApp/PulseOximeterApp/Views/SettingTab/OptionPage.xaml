<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PulseOximeterApp.ViewModels.SettingTab" x:DataType="viewmodels:OptionPageViewModel"
             xmlns:behaviors="clr-namespace:PulseOximeterApp.Infrastructure.Behaviors"
             x:Class="PulseOximeterApp.Views.SettingTab.OptionPage">

    <ContentPage.Style>
        <Style TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="#f7f7f7"/>
        </Style>
    </ContentPage.Style>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.025*"/>
            <ColumnDefinition Width="0.95*"/>
            <ColumnDefinition Width="0.025*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.025*"/>
            <RowDefinition Height="0.95*"/>
            <RowDefinition Height="0.025*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="1" Grid.Row="1">
            <StackLayout>
                <Grid>
                    <Label VerticalOptions="Center" Text="Число измерений пульса:"/>
                    <Entry HorizontalOptions="End" WidthRequest="80" HorizontalTextAlignment="Center" MaxLength="10" Keyboard="Numeric" Text="{Binding NumberOfPulseMeasure, Mode=TwoWay}">
                        <Entry.Behaviors>
                            <behaviors:IntegerValidationBehavior MinValue="30" MaxValue="600" />
                        </Entry.Behaviors>
                    </Entry>
                </Grid>

                <Rectangle Fill="DarkGray" HeightRequest="2"/>

                <Grid>
                    <Label VerticalOptions="Center" Text="Число измерений сатурации:"/>
                    <Entry HorizontalOptions="End" WidthRequest="80" HorizontalTextAlignment="Center" MaxLength="10" Keyboard="Numeric" Text="{Binding NumberOfOxigenMeasure, Mode=TwoWay}">
                        <Entry.Behaviors>
                            <behaviors:IntegerValidationBehavior MinValue="30" MaxValue="600" />
                        </Entry.Behaviors>
                    </Entry>
                </Grid>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>