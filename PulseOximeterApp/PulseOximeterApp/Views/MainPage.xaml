<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:PulseOximeterApp.Views" 
       xmlns:viewmodels="clr-namespace:PulseOximeterApp.ViewModels" x:DataType="viewmodels:MainPageViewModel"
       x:Class="PulseOximeterApp.MainPage">

    <TabBar>
        <Tab Title="Главная" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" IsEnabled="{Binding HomeTabIsEnabled}" />
        </Tab>

        <Tab Title="Статистика измерений" Icon="statistic.png">
            <ShellContent ContentTemplate="{DataTemplate views:StatisticPage}" IsEnabled="{Binding StatisticTabIsEnabled}" />
        </Tab>

        <Tab Title="Настройки" Icon="setting.png">
            <ShellContent ContentTemplate="{DataTemplate views:SettingPage}" IsEnabled="{Binding SettingTabIsEnabled}" />
        </Tab>
    </TabBar>

</Shell>
